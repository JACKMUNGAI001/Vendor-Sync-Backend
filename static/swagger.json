{
  "openapi": "3.0.0",
  "info": {
    "title": "VendorSync API",
    "version": "1.0.0",
    "description": "Procurement management system with RBAC, quotes, and search"
  },
  "servers": [
    {
      "url": "http://localhost:5000",
      "description": "Local server"
    }
  ],
  "paths": {
    "/search": {
      "get": {
        "summary": "Search vendors, orders, quotes (Algolia-powered)",
        "parameters": [
          {
            "name": "query",
            "in": "query",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "responses": {
          "200": {
            "description": "Search results",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": { "type": "object" }
                }
              }
            }
          }
        },
        "security": [{ "bearerAuth": [] }]
      }
    },
    "/quotes": {
      "post": {
        "summary": "Submit a quote (Vendor only)",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "order_id": { "type": "integer" },
                  "price": { "type": "number", "format": "float" }
                },
                "required": ["order_id", "price"]
              }
            }
          }
        },
        "responses": {
          "201": { "description": "Quote submitted" }
        },
        "security": [{ "bearerAuth": [] }]
      }
    },
    "/quotes/{id}": {
      "patch": {
        "summary": "Accept/reject quote (Manager only)",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "integer" }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "status": { "type": "string", "enum": ["accepted", "rejected"] }
                },
                "required": ["status"]
              }
            }
          }
        },
        "responses": {
          "200": { "description": "Quote updated" }
        },
        "security": [{ "bearerAuth": [] }]
      }
    },
    "/documents": {
      "post": {
        "summary": "Upload invoice/receipt (Staff/Vendor)",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "order_id": { "type": "integer" },
                  "file": { "type": "string" },
                  "file_type": { "type": "string" }
                },
                "required": ["order_id", "file", "file_type"]
              }
            }
          }
        },
        "responses": {
          "201": { "description": "Document uploaded to Cloudinary" }
        },
        "security": [{ "bearerAuth": [] }]
      }
    }
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  }
}